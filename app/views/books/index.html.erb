<h1>Books</h1>
<% @books.each do |book| %>

  <p>Title</p>
  <span><%= book.title %></span>
  <p>Body</p>
  <span><%= book.body %></span>
  
  <span>
    <%= link_to "Show", "/books/#{book.id}" %>
  </span>
  
<% end %>




<h1>New book</h1>
<%= form_with model: @book, url: '/books/index', method: :post do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
	
  <p>Body</p>
  <%= f.text_area :body %>
	
	<div>
  <%= f.submit 'Create Book' %>
<% end %>
  </div>